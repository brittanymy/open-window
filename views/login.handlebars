<h1>Log In</h1>

<form id="login-form" class="login-form">
    <div>
        <label for="username-input-login">Username:</label>
        <input type="text" id="username-input-login">
    </div>

    <div>
        <label for="password-input-login">Password:</label>
        <input type="password" id="password-input-login">
    </div>

    <div>
        <button type="submit" class="btn" id="login-btn">Log In</button>
    </div>

    <a href="/signup">Sign Up Instead!</a>
</form>

<script src="/js/login.js"></script>