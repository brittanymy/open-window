{{#if posts.length}}
<section>
    <h2>Your Posts</h2>

    <ol>
        {{#each posts as |post|}}
        <li>
            <h2>{{post.title}}</h2>
            <p>{{post.body}}</p>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}